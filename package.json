  "description": "",
  "main": "dist/index.js",
  "watch": {
    "eslint": {
      "extensions": "ts,js,html,css",
      "quiet": false,
      "patterns": [
        "src"
      ]
    },
    "build": {
      "extensions": "ts,js,html,css",
      "quiet": false,
      "patterns": [
        "src"
      ]
    },
    "tsc": {
